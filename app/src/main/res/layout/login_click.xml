<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginHorizontal="15dp">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome back"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="375dp"
        android:layout_marginLeft="3dp"
        android:layout_height="wrap_content"
        android:hint="Email address"
        android:background="@drawable/email_border"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:inputType="textEmailAddress"
        />
    

    <Button
        android:layout_width="375dp"
        android:layout_marginLeft="3dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:text="Continue"
        android:textColor="@color/white"
        android:backgroundTint="@color/dark_green"
        android:textSize="18dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >


        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?  "
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/sign_up2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_toRightOf="@+id/msg"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   OR   "
            android:textSize="15dp"
            android:background="@color/white"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            />

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_toLeftOf="@+id/or"
            android:layout_centerInParent="true"
            />

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_toRightOf="@+id/or"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/button2"
        android:layout_width="375dp"
        android:layout_marginLeft="3dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:text="  Continue with Google"
        android:textSize="15dp"
        android:textColor="@color/light_gray"
        android:drawableLeft="@drawable/google_icon"
        app:strokeColor="@color/light_gray"
        android:textAlignment="textStart"
        app:strokeWidth="0.7dp"

        />

    <Button
        android:id="@+id/button3"
        android:layout_width="375dp"
        android:layout_marginLeft="3dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="  Continue with Microsoft"
        android:textSize="15dp"
        android:textColor="@color/light_gray"
        android:drawableLeft="@drawable/microsoft_icon"
        app:strokeColor="@color/light_gray"
        android:textAlignment="textStart"
        app:strokeWidth="0.7dp"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="375dp"
        android:layout_marginLeft="3dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="  Continue with Apple"
        android:textSize="15dp"
        android:textColor="@color/light_gray"
        android:drawableLeft="@drawable/apple_icon"
        app:strokeColor="@color/light_gray"
        android:textAlignment="textStart"
        app:strokeWidth="0.7dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        >

        <TextView
            android:id="@+id/terms1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of use  |"
            android:layout_marginTop="10dp"
            android:textColor="@color/light_green"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/privacy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Privacy policy"
            android:layout_marginTop="10dp"
            android:textColor="@color/light_green"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/terms1"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>




</LinearLayout>

